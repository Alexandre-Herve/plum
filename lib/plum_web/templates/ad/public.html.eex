<!-- {{{ Maison + terrain -->
<section class="container mb-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <h3 class="h3-responsive mb-3 font-bold dark-grey-text">L'ensemble maison + terrain</h3>
      <p>
      Les Maisons Léo vous proposent cette annonce maison + terrain pour une valeur totale de <b><%= raw Number.Currency.number_to_currency(@ad.land.price + house_price) %></b>, hors frais d'adaptation au sol.
      </p>
    </div>
  </div>
</section>
<!-- }}} -->

<!-- {{{ Google Maps-->
<script src="https://maps.google.com/maps/api/js?key=AIzaSyBA_MaRLk3bPbnD5PSldfqW6pW42DORpJU"></script>

<script>
function init_map() {
  var var_location = new google.maps.LatLng(<%= @ad.land.lat %>, <%= @ad.land.lng %>);
  var var_mapoptions = {
    center: var_location,
    zoom: 10
  };
  var var_marker = new google.maps.Marker({
    position: var_location,
    map: var_map,
    title: "Emplacement du terrain"
  });
  var var_map = new google.maps.Map(document.getElementById("map-container"), var_mapoptions);
  var_marker.setMap(var_map);
}
google.maps.event.addDomListener(window, 'load', init_map);
</script>
<!-- }}} -->

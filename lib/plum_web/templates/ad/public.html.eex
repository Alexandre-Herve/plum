        	<li data-target="#carousel-example-1z" data-slide-to="1"></li>
    		</ol>
    		<!--/.Indicators-->
    		<!--Slides-->
    		<div class="carousel-inner" role="listbox">
        	<!--First slide-->
        	<div class="carousel-item active">
      			<img class="d-block w-100" src="<%= static_path(@conn, "/images/maison.png") %>">
        	</div>
        	<!--/First slide-->
        	<!--Second slide-->
        	<div class="carousel-item">
      			<img class="d-block w-100" src="<%= static_path(@conn, "/images/maison_toit.jpg") %>">
        	</div>
        	<!--/Second slide-->
    		</div>
    		<!--/.Slides-->
        <%# <!--Controls--> %>
        <%# <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev"> %>
          <%# <span class="carousel-control-prev-icon" aria-hidden="true"></span> %>
          <%# <span class="sr-only">Previous</span> %>
        <%# </a> %>
        <%# <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next"> %>
          <%# <span class="carousel-control-next-icon" aria-hidden="true"></span> %>
          <%# <span class="sr-only">Next</span> %>
        <%# </a> %>
        <%# <!--/.Controls--> %>
			</div>
			<!-- }}} /.Carousel Wrapper-->
      <div class="h4 mt-2">
			  <span class="badge badge-green-flash">Classe énergie A</span>
			  <span class="badge badge-green-flash">80 m<sup>2</sup></span>
			  <span class="badge badge-green-flash">3 chambres</span>
        <span class="badge badge-green-flash"><%= raw Number.Currency.number_to_currency(house_price) %></span>
        <small><%= link raw(~S(<i class="fa fa-plus"></i> sur la maison)), to: page_path(@conn, :index), target: "_blank", class: "text-green-flash" %></small>
      </div>
    </div>
  </div>
</section>
<!-- }}} -->

<!-- {{{ Maison + terrain -->
<section class="container mb-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <h3 class="h3-responsive mb-3 font-bold text-dark-gray">L'ensemble maison + terrain</h3>
      <p>
      Les Maisons Léo vous proposent cette annonce maison + terrain pour une valeur totale de <b><%= raw Number.Currency.number_to_currency(@ad.land.price + house_price) %></b>, hors frais d'adaptation au sol.<br />
      Pour obtenir de plus amples informations, n'hésitez pas à remplir le formulaire ci-dessous. Nous vous contacterons dès que possible.
      </p>
    </div>
  </div>
</section>
<!-- }}} -->

<!-- {{{ Contact -->
<section class="container mb-5">
  <div class="row justify-content-center" style="margin-bottom: 300px">
    <div class="col-md-10">
      <h3 class="h3-responsive mb-3 font-bold text-dark-gray">En savoir plus</h3>
      <div id="contact-form">
        <%= Phoenix.View.render PlumWeb.ContactView, "form.html", changeset: @contact_changeset, conn: @conn, ad: @ad, action: contact_path(@conn, :create) %>
      </div>
    </div>
  </div>
</section>
<!-- }}} -->

<!-- {{{ Google Maps-->
<script src="https://maps.google.com/maps/api/js?key=AIzaSyBA_MaRLk3bPbnD5PSldfqW6pW42DORpJU"></script>

<script>
function init_map() {
  var var_location = new google.maps.LatLng(<%= @ad.land.lat %>, <%= @ad.land.lng %>);
  var var_mapoptions = {
    center: var_location,
    zoom: 10
  };
  var var_marker = new google.maps.Marker({
    position: var_location,
    map: var_map,
    title: "Emplacement du terrain"
  });
  var var_map = new google.maps.Map(document.getElementById("map-container"), var_mapoptions);
  var_marker.setMap(var_map);
}
google.maps.event.addDomListener(window, 'load', init_map);
</script>
<!-- }}} -->

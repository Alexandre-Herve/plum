<% house_price = 68_000 %>

<!-- {{{ Header -->
<header class="mb-5">
  <section class="intro-1">
    <div class="full-bg-img flex-center">
      <div class="container">
        <ul>
          <li>
            <h2 class="h2-responsive font-bold brand text-yellow-flash">
              <i id="icon" class="fa fa-home logo"></i>
              Maisons Léo
            </h2>
          </li>
          <li><h1 class="title h1-responsive font-bold wow fadeInDown" data-wow-delay="0.2s" style="color: white">Devenez propriétaire à <%= @ad.land.city %>&nbsp;(<%= @ad.land.department %>)</h1></li>
          <li><p class="subtitle lead text-shadow" style="color: white" data-wow-delay="0.2s">
              Annonce
              <span class="text-yellow-flash font-bold">Maison Léo</span>
              neuve +
              <span class="text-yellow-flash font-bold">terrain <%= @ad.land.surface %>&nbsp;m<sup>2</sup></span>
              pour
              <span class="text-yellow-flash font-bold"><%= raw Number.Currency.number_to_currency(@ad.land.price + house_price) %></span>
          </p></li>
          <li><a class="btn btn-yellow-flash" id="interested-button">En savoir plus</a></li>
        </ul>
      </div>
    </div>
  </section>
</header>
<!-- }}} -->

<!-- {{{ Le terrain -->
<section class="container mb-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <h3 class="h3-responsive mb-3 font-bold text-dark-gray">Le terrain</h3>
			<!-- {{{ Carousel Wrapper-->
			<div id="carousel-land" class="carousel slide carousel-fade" data-ride="carousel">
    		<!--Indicators-->
    		<ol class="carousel-indicators">
        	<li data-target="#carousel-land" data-slide-to="0" class="active"></li>
        	<li data-target="#carousel-land" data-slide-to="1"></li>
    		</ol>
    		<!--/.Indicators-->
    		<!--Slides-->
    		<div class="carousel-inner" role="listbox">
        	<!--First slide-->
        	<div class="carousel-item active">
            <div id="map-container" class="responsive-map z-depth-1 wow fadeIn img-fluid"></div>
        	</div>
        	<!--/First slide-->
        	<!--Second slide-->
        	<div class="carousel-item">
      			<img class="d-block w-100 responsive-map" src="<%= static_path(@conn, "/images/terrain.jpg") %>">
        	</div>
        	<!--/Second slide-->
    		</div>
    		<!--/.Slides-->
        <%# <!--Controls--> %>
        <%# <a class="carousel-control-prev" href="#carousel-land" role="button" data-slide="prev"> %>
          <%# <span class="carousel-control-prev-icon" aria-hidden="true"></span> %>
          <%# <span class="sr-only">Previous</span> %>
        <%# </a> %>
        <%# <a class="carousel-control-next" href="#carousel-land" role="button" data-slide="next"> %>
          <%# <span class="carousel-control-next-icon" aria-hidden="true"></span> %>
          <%# <span class="sr-only">Next</span> %>
        <%# </a> %>
        <%# <!--/.Controls--> %>
			</div>
			<!-- }}} /.Carousel Wrapper-->
      <div class="h4 mt-2">
			  <span class="badge badge-green-flash"><%= @ad.land.surface %>&nbsp;m<sup>2</sup></span>
        <span class="badge badge-green-flash"><%= raw Number.Currency.number_to_currency(@ad.land.price) %></span>
      </div>
    </div>
  </div>
</section>
<!-- }}} -->

<!-- {{{ La maison -->

<% house_price = 68_000 %>

<!-- {{{ Header -->
<header class="mb-5">
  <section class="intro-1">
    <div class="full-bg-img flex-center">
      <div class="container">
        <ul>
          <h2 class="h2-responsive font-bold brand yellow-flash-text">
            <i id="icon" class="fa fa-home logo"></i>
            Maisons Léo
          </h2>
          <li>
            <h1 class="h1-responsive font-bold" data-wow-delay="0.2s" style="color: white">
              <span class="badge-yellow-flash">&nbsp;Maison 80m<sup>2</sup>&nbsp;</span>
              +
              <span class="badge-yellow-flash">&nbsp;terrain&nbsp;<%= @ad.land.surface %>&nbsp;m<sup>2</sup>&nbsp;</span>
              =
              <span class="badge-yellow-flash">&nbsp;<%= raw Number.Currency.number_to_currency(@ad.land.price + house_price) %>&nbsp;</span>
            </h1>
          </li>
          <li>
            <h4 class="responsive-h4" style="color: white" data-wow-delay="0.2s">
              Devenez propriétaire à <%= @ad.land.city %>&nbsp;(<%= @ad.land.department %>)
            </h4>
          </li>
          <li><%= link "Me positionner", to: interested_url(@ad, @conn.assigns[:current_user]), class: "btn btn-outline-yellow-flash", id: "interested-button" %></li>
        </ul>
      </div>
    </div>
  </section>
</header>
<!-- }}} -->

